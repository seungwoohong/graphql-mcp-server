{
  "name": "graphql-mcp-server",
  "version": "0.0.1",
  "description": "graphql-mcp-server MCP server",
  "type": "module",
  "bin": {
    "graphql-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && mcp-build",
    "build:server": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:bridge": "node dist/mcp-bridge.js",
    "start:http-mcp": "node dist/http-mcp-server.js",
    "start:sse-mcp": "node dist/sse-mcp-server.js",
    "start:cursor-proxy": "node dist/cursor-proxy.js",
    "dev": "tsc --watch & node dist/http-mcp-server.js",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "lint": "eslint \"src/**/*.{ts,js}\" --fix",
    "lint:check": "eslint \"src/**/*.{ts,js}\""
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.13",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "mcp-framework": "^0.2.2",
    "node-fetch": "^3.3.2",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.19.0"
  }
}